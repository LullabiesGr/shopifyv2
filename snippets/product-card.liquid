<div class="product-card relative group">
  <div class="relative overflow-hidden rounded-lg">
    <img src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}"
         alt="{{ product.title }}"
         class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
         
    {% if product.compare_at_price > product.price %}
      <span class="absolute top-2 right-2 bg-red-500 text-white px-2 py-1 text-xs rounded">
        Sale
      </span>
    {% endif %}
    
    <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <form method="post" action="/cart/add" class="add-to-cart-form">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button type="submit" class="w-full bg-white text-black py-2 rounded-lg hover:bg-gray-100 transition-colors">
          Add to Cart
        </button>
      </form>
    </div>
  </div>
  
  <div class="mt-4">
    <h3 class="text-lg font-medium">{{ product.title }}</h3>
    <div class="flex items-center justify-between mt-2">
      <div class="flex items-center">
        <span class="text-lg font-bold">{{ product.price | money }}</span>
        {% if product.compare_at_price > product.price %}
          <span class="ml-2 text-sm text-gray-500 line-through">
            {{ product.compare_at_price | money }}
          </span>
        {% endif %}
      </div>
    </div>
  </div>
</div>