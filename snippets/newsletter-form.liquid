<div class="newsletter-form bg-gray-100 p-8 rounded-lg">
  <h3 class="text-2xl font-bold mb-4">{{ title | default: 'Subscribe to our newsletter' }}</h3>
  <p class="text-gray-600 mb-6">{{ subtitle | default: 'Stay updated with our latest news and offers' }}</p>
  
  {% form 'customer', class: 'flex flex-col md:flex-row gap-4' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <input type="email"
           name="contact[email]"
           class="flex-1 px-4 py-3 rounded-lg border border-gray-300 focus:border-gray-500 focus:ring-1 focus:ring-gray-500"
           placeholder="Enter your email"
           required>
    <button type="submit" class="btn-primary whitespace-nowrap">
      {{ button_text | default: 'Subscribe' }}
    </button>
  {% endform %}
</div>