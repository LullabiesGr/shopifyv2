{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          {% if section.settings.logo %}
            <img class="h-8 w-auto" src="{{ section.settings.logo | img_url: '160x' }}" alt="{{ shop.name }}">
          {% else %}
            <span class="text-xl font-bold">{{ shop.name }}</span>
          {% endif %}
        </div>
      </div>
      
      <nav class="hidden md:flex space-x-8">
        {% for link in section.settings.menu.links %}
          <a href="{{ link.url }}" class="text-gray-500 hover:text-gray-900 px-3 py-2 text-sm font-medium">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>
    </div>
  </div>
</header>